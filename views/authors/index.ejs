<h2 class= "pageHeader">search authors</h2>
<form action= "/authors" method = GET>
    <label for="#">Name</label>
    <input type="text" name="name" value ="<%- SearchOptions.name %>">

    <button type="submit">search</button>
</form>
<br>
<% authors.forEach(author => { %>
  <div><%= author.name %></div>
  <div class="buttonRow">
    <a class="btn btnPrimary" href="/authors/<%= author.id %>">View</a>
    <a class="btn btnPrimary" href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm',
                { url: `/authors/${author.id}` }) %>
  </div>
<% }) %>

