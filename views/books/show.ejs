<h2 class= "pageHeader"><%= book.title %></h2>

<div class="book-details" >
    <div>
            <img class="book-cover" src="<%= book.coverImagePath %>" alt="">

        <div class="book-details-btn-grid">
                <a class="btn btnPrimary" href="/books/<%= book.id %>/edit">Edit</a>
                <%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
                <a class="btn btnPrimary book-details-author-button" href="/authors/<%= book.author.id %>">View Author</a>
    </div>
        
            
    </div>

    <div class="book-details-grid">
        <div class="book-details-lable">Author: </div>
        <div><%= book.author.name %></div>
        <div class="book-details-lable">Publish Date: </div>
        <div><%= book.publishDate.toDateString() %></div>
        <div class="book-details-lable">Page Count: </div>
        <div><%= book.pageCount %></div>
        <div class="book-details-lable">Description: </div>
        <div> <%= book.description %></div>
    </div>        

</div>



